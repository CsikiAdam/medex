<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="dataBorderPane" prefHeight="807.0" prefWidth="1090.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trashcan.controllers.DataBaseController">
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteMed" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: #2f7dc2;" text="Delete" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addMed" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: #2f7dc2;" text="Add" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="enterButton" mnemonicParsing="false" onAction="#enter" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: #ee1111;" text="Enter" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <VBox prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <VBox prefHeight="200.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </right>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Name:" />
                  <TextField fx:id="nameTextField">
                     <HBox.margin>
                        <Insets left="40.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Firm:" />
                  <TextField fx:id="firmTextField">
                     <HBox.margin>
                        <Insets left="49.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Substance:" />
                  <TextField fx:id="substTextField">
                     <HBox.margin>
                        <Insets left="18.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Type:" />
                  <TextField fx:id="typeTextField">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Made For:" />
                  <TextField fx:id="madeForTextField">
                     <HBox.margin>
                        <Insets left="21.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Administered:" />
                  <TextField fx:id="admTextField">
                     <HBox.margin>
                        <Insets left="2.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Dose/Day" />
                  <TextField fx:id="doseTextField">
                     <HBox.margin>
                        <Insets left="24.0" right="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Label text="(number)" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label text="Dangerous:" />
                  <ComboBox fx:id="dangerComboBox" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="17.0" right="5.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0" />
            <HBox alignment="CENTER_LEFT" prefHeight="238.0" prefWidth="950.0">
               <children>
                  <Label text="Description:" />
                  <TextArea fx:id="descriptionTextArea" prefHeight="236.0" prefWidth="809.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
